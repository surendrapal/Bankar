@model IEnumerable<BM.Models.Location>
@{ ViewBag.Title = "Location Management"; }
@*<ul id="crumbs">
        <li><a href="/admin">Home</a></li>
        <li>Manage Companies</li>
    </ul>*@
<div class="row-fluid">
    <div class="span12">
        <div class="widget no-margin">
            <div class="widget-header">
                <div class="title">
                    <span data-icon="" aria-hidden="true" class="fs1"></span> List of Location
                </div>
            </div>
            <div class="widget-body">
                <div class="example_alt_pagination" id="dt_example">

                    <div class="pull-right">
                        <a class="btn btn-small btn-primary hidden-tablet hidden-phone" role="button" href="@Url.Action("Create", "Location")">
                            Create Location
                        </a>
                    </div>
                    <table class="table table-striped table-bordered" id="customers">
                        <thead>
                            <tr> <th>Name</th> <th>Parent Name</th> <th>Action</th></tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        //Data Tables
        $(document).ready(function () {
            $('#customers').dataTable({
                "sAjaxSource": "/Settings/Location/GetLocations",
                "bProcessing": false,
                "bServerSide": false,
                "sAjaxDataProp": "",
                "sPaginationType": "full_numbers",
                "aoColumnDefs": [
                {
                    "sWidth": "20%", "aTargets": [1, 2]
                }, {
                    "aTargets": [2]
                  , "bSortable": false
                  , "mRender": function (url, type, full) {
                      return '<a href="@Url.Action("Edit", "Location")/' + url + '" class="btn btn-success btn-small hidden-phone">Edit</a> <a href="@Url.Action("delete", "Location")/' + url + '" class="btn btn-small btn-primary hidden-tablet hidden-phone">Delete</a>';
                  }
                }
                ],
                "aoColumns": [
                    { "mDataProp": "Name" },
                    { "mDataProp": "ParentName" },
                    { "mDataProp": "Id" }
                ]
            });
        });
    </script>
}