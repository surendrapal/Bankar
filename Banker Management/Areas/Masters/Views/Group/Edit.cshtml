@model BM.Models.Group

@{
    ViewBag.Title = "Edit Group";
}
<h3>Edit Group</h3>
<div class="row-fluid">
    @using (Html.BeginForm("Edit", "Group", new { area = "Masters" }, FormMethod.Post, new { @class = "form-horizontal no-margin" }))
    {
        <div class="control-group">
            <div class="controls controls-row">
                @Html.ValidationSummary(true)
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label" })
            <div class="controls controls-row">
                @Html.TextBoxFor(model => model.Name, new { @class = "span12", placeholder = "Name" })
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label" })
            <div class="controls controls-row">
                @Html.TextBoxFor(model => model.Description, new { @class = "span12", placeholder = "Description" })
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(model => model.ParentId, "Group", new { @class = "control-label" })
            <div class="controls controls-row">
                @Html.DropDownList("ParentId", null, "SELECT-ONE", new Dictionary<string, object> { { "class", "span12" }, { "data-val", "true" } })
            </div>
        </div>
        <div class="form-actions no-margin">
            <button class="btn btn-info " type="submit">
                Save
            </button>

            <a class="btn btn-info" role="button" href="@Url.Action("Index", "Group")">
                Back
            </a>
            <div class="clearfix">
            </div>
        </div>
        @Html.AntiForgeryToken()
    }
</div>
@section Scripts{
    <script type="text/jscript">
        $(document).ready(function () {
            $('.form-horizontal').submit(function (e) { // <<< This selector needs to point to your form.

                if ($('#ParentId').val() == "") {
                    $('#ParentId').addClass("input-validation-error");
                    e.preventDefault();
                    return false;
                }
                else {
                    $('#ParentId').removeClass("input-validation-error");
                }
            });
        });
    </script>
}