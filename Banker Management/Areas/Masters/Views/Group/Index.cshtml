
@{ ViewBag.Title = "Group Management"; }
<div class="row-fluid">
    <div class="span12">
        <div class="widget no-margin">
            <div class="widget-header">
                <div class="title">
                    <span data-icon="" aria-hidden="true" class="fs1"></span> List of Groups
                </div>
            </div>
            <div class="widget-body">
                <div class="example_alt_pagination" id="dt_example">

                    <div class="pull-right">
                        <a @*data-original-title="" data-toggle="modal"*@ class="btn btn-small btn-primary hidden-tablet hidden-phone" role="button" href="@Url.Action("Create", "Group")">
                            Create Group
                        </a>
                    </div>
                    <table class="table table-striped table-bordered" id="groups">
                        <thead>
                            <tr> <th>Name</th><th>Description</th>  <th>Parent Name</th> <th>Action</th></tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        //Data Tables
        $(document).ready(function () {
            $('#groups').dataTable({
                "sAjaxSource": "/Masters/Group/Get",
                "bProcessing": false,
                "bServerSide": false,
                "sAjaxDataProp": "",
                "sPaginationType": "full_numbers",
                "aoColumnDefs": [
                {
                    "sWidth": "20%", "aTargets": [2, 3]
                }, {
                    "aTargets": [3]
                  , "bSortable": false
                  , "mRender": function (url, type, full) {
                      return '<a href="@Url.Action("Details", "Group")/' + url + '" class="btn btn-success btn-small">View</a> <a href="@Url.Action("Edit", "Group")/' + url + '" class="btn btn-success btn-small">Edit</a> <a href="@Url.Action("Delete", "Group")/' + url + '" class="btn btn-small btn-danger">Delete</a>';
                  }
                }
                ],
                "aoColumns": [
                    { "mDataProp": "Name" },
                    { "mDataProp": "Description" },
                    {
                        "mDataProp": "ParentName"
                    },

                    { "mDataProp": "Id" }
                ]
            });

        });

    </script>
}