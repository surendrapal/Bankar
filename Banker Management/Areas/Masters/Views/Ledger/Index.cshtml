
@{ ViewBag.Title = "Ledger Management"; }
<div class="row-fluid">
    <div class="span12">
        <div class="widget no-margin">
            <div class="widget-header">
                <div class="title">
                    <span data-icon="" aria-hidden="true" class="fs1"></span> List of Ledgers
                </div>
            </div>
            <div class="widget-body">
                <div class="example_alt_pagination" id="dt_example">

                    <div class="pull-right">
                        <a @*data-original-title="" data-toggle="modal"*@ class="btn btn-small btn-primary hidden-tablet hidden-phone" role="button" href="@Url.Action("Create", "Ledger")">
                            Create Ledger
                        </a>
                    </div>
                    <table class="table table-striped table-bordered" id="ledgers">
                        <thead>
                            <tr> <th>Name</th><th>Group Name</th>  <th>Opening Balance</th> <th>Action</th></tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        //Data Tables
        $(document).ready(function () {
            $('#ledgers').dataTable({
                "sAjaxSource": "/Masters/Ledger/Get",
                "bProcessing": false,
                "bServerSide": false,
                "sAjaxDataProp": "",
                "sPaginationType": "full_numbers",
                "aoColumnDefs": [
                {
                    "sWidth": "20%", "aTargets": [2, 3]
                }, {
                    "aTargets": [3]
                  , "bSortable": false
                  , "mRender": function (url, type, full) {
                      return '<a href="@Url.Action("Details", "Ledger")/' + url + '" class="btn btn-success btn-small">View</a> <a href="@Url.Action("Edit", "Ledger")/' + url + '" class="btn btn-success btn-small">Edit</a> <a href="@Url.Action("Delete", "Ledger")/' + url + '" class="btn btn-small btn-danger">Delete</a>';
                  }
                },
                {
                    "aTargets": [2],
                    "fnCreatedCell": function (nTd, sData, oData, iRow, iCol) {
                        var $currencyCell = $(nTd);
                        var commaValue = $currencyCell.text().replace(/(\d)(?=(\d\d\d)+(?!\d))/g, "$1,");
                        $currencyCell.text(commaValue);
                    }
                }

                ],
                "aoColumns": [
                    { "mDataProp": "Name" },
                    { "mDataProp": "GroupName" },
                    { "mDataProp": "OpeningBalance", "sClass": "right-align" },
                    { "mDataProp": "Id" }
                ]
            });

        });

    </script>
}