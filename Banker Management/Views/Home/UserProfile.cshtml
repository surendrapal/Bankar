@{
    ViewBag.Title = "UserProfile";
}

<div class="page-header">
    <div class="pull-left">
        <h2>User Profile</h2>
    </div>
    <div class="clearfix"></div>
</div>

<div class="row-fluid">
    <div class="span12">
        <div class="widget no-margin">
            <div class="widget-header">
                <div class="title">
                    <span data-icon="" aria-hidden="true" class="fs1"></span> Edit Profile
                </div>
            </div>
            <div class="widget-body">
                <div class="row-fluid">
                    <div class="span2">
                        <div class="thumbnail">
                            <img src="/assets/img/profile.png" alt="300x200">
                            <div class="caption">
                                <a style="margin-bottom: 10px;" class="editable editable-click inputText" data-original-title="Edit your Nick Name" data-pk="1" data-type="text" href="#">
                                    Srinu Basava
                                </a>
                                <p class="no-margin">
                                    <a class="btn btn-info" href="#" data-original-title="">
                                        Edit
                                    </a>

                                    <a class="btn" href="#" data-original-title="">
                                        Cancel
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="span10">
                        <form class="form-horizontal no-margin">
                            <h5>
                                Login Information
                            </h5>
                            <hr>
                            <div class="control-group">
                                <label class="control-label">
                                    User Name
                                </label>
                                <div class="controls">
                                    <a class="inputText editable editable-click" data-original-title="Click here to edit your name" data-pk="1" data-type="text" id="userName" href="#">
                                        Srinu Basava
                                    </a>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">
                                    Email ID
                                </label>
                                <div class="controls">
                                    <a class="inputText editable editable-click" data-original-title="Click here to edit your email" data-pk="1" data-type="email" href="#">
                                        honey@youmail.com
                                    </a>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">
                                    Password
                                </label>
                                <div class="controls">
                                    <a class="inputText editable editable-click" data-original-title="Click here to edit your password" data-pk="1" data-type="password" id="password" href="#">
                                        ******
                                    </a>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">
                                    Confirm Password
                                </label>
                                <div class="controls">
                                    <a class="inputText editable editable-click" data-original-title="Click here to confirm your password" data-pk="1" data-type="password" id="confirmPassword" href="#">
                                        ******
                                    </a>
                                </div>
                            </div>
                            <br>
                            <h5>
                                Personal Information
                            </h5>
                            <hr>
                            <div class="control-group">
                                <label class="control-label">
                                    First Name
                                </label>
                                <div class="controls">
                                    <a class="inputText editable editable-click" data-original-title="Click here to edit your first name" data-pk="1" data-type="text" id="firstName" href="#">
                                        Srinu
                                    </a>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">
                                    Last Name
                                </label>
                                <div class="controls">
                                    <a class="inputText editable editable-click" data-original-title="Click here to edit your first name" data-pk="1" data-type="text" id="lastName" href="#">
                                        Basava
                                    </a>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">
                                    Location
                                </label>
                                <div class="controls">
                                    <a class="inputText editable editable-click" data-original-title="Click here to edit your first name" data-pk="1" data-type="text" id="location" href="#">
                                        Banglore, India.
                                    </a>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">
                                    Website URL
                                </label>
                                <div class="controls">
                                    <a class="inputText editable editable-click" data-original-title="Click here to edit your first name" data-pk="1" data-type="url" id="url" href="#">
                                        http:www.abcxyz.com
                                    </a>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">
                                    Tags
                                </label>
                                <div class="controls">
                                    <a class="editable editable-click" data-original-title="Enter tags" data-pk="1" data-type="select2" id="tags" href="#">
                                        Html, CSS, Javascript
                                    </a>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">
                                    About
                                </label>
                                <div class="controls">
                                    <a style="margin-bottom: 10px;" class="inputTextArea editable editable-click" href="#" id="aboutMe" data-type="textarea" data-pk="1" data-placeholder="Your comments here..." data-original-title="Write about your self">
                                        About me :)
                                    </a>
                                </div>
                            </div>
                            <div class="form-actions no-margin">
                                <button class="btn btn-info" type="submit">
                                    Save changes
                                </button>
                                <button class="btn" type="button">
                                    Cancel
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>